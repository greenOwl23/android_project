<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Account"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <FrameLayout
            android:id="@+id/account_balance"
            android:layout_width="394dp"
            android:layout_height="84dp"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/Budget_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:text="Budget Left:"
                android:textColor="#00ff00"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/budget_left_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:text="170"
                android:textColor="#00ff00"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/accountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="Account Balance:"
                android:textColor="#3F51B5"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/currentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="30000"
                android:textColor="#3F51B5"
                android:textSize="20dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/saving"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Saving Stats"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <FrameLayout
            android:id="@+id/saving_sec"

            android:layout_width="match_parent"
            android:layout_height="246dp">

            <FrameLayout
                android:id="@+id/Time_Scale"
                android:layout_width="207dp"
                android:layout_height="246dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_scale_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="16dp"
                        android:text="Time Scale"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />


                    <TextView
                        android:id="@+id/day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#11000000"
                        android:padding="18dp"
                        android:text="Day"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#11000000"
                        android:padding="18dp"
                        android:text="Month"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#11000000"
                        android:padding="18dp"
                        android:text="Year"
                        android:textAlignment="center" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/amount_time"
                android:layout_width="203dp"
                android:layout_height="272dp"
                android:layout_marginLeft="210dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amount_time_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@color/colorPrimaryDark"
                        android:padding="16dp"
                        android:text="Amount"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"

                        />

                    <TextView
                        android:id="@+id/amount_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#11000000"
                        android:padding="18dp"
                        android:text="+50"
                        android:textAlignment="center"
                        android:textColor="#00ff00" />

                    <TextView
                        android:id="@+id/amount_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#11000000"
                        android:padding="18dp"
                        android:text="+1500"
                        android:textAlignment="center"
                        android:textColor="#00ff00" />

                    <TextView
                        android:id="@+id/amount_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#11000000"
                        android:padding="18dp"
                        android:text="+18000"
                        android:textAlignment="center"
                        android:textColor="#00ff00" />
                </LinearLayout>
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/headingRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorPrimary"
            android:text="Recent Transactions"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="327dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_list"
                android:layout_width="410dp"
                android:layout_height="292dp" />

        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/button_insert"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginStart="311dp"
        android:layout_marginLeft="311dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_add_circle_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>